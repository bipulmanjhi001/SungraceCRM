<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="sungracecrm.JobDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:id="@+id/linlaHeaderProgress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/pbHeaderProgress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ProgressBar>
            </LinearLayout>
            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="COMPLAINT DETAILS"/>

            <RelativeLayout
                android:id="@+id/dark_layout"
                android:layout_below="@+id/heading"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="#f7f7f7"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/crnNumber"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#00c210"
                    android:text="CRN"/>
                <TextView
                    android:id="@+id/postDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#00c210"
                    android:layout_toRightOf="@+id/crnNumber"
                    android:text="DD/mm/YYYY "/>


                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/postDate"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:text="COMPLAINT STATUS"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/postDate"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/status_text"
                    android:text="- "/>

                <TextView
                    android:id="@+id/jobAssignedTo_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:text="JOB ASSIGNED TO"/>
                <TextView
                    android:id="@+id/jobAssignedTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/jobAssignedTo_text"
                    android:text="- "/>
                <TextView
                    android:id="@+id/jobAssignedDate_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jobAssignedTo"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:text="JOB ASSIGNED DATE"/>
                <TextView
                    android:id="@+id/jobAssignedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jobAssignedTo"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/jobAssignedDate_text"
                    android:text="- "/>
                <TextView
                    android:id="@+id/controllerSerialNo_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jobAssignedDate"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:text="SERIALNo."/>
                <TextView
                    android:id="@+id/controllerSerialNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jobAssignedDate"
                    android:layout_toRightOf="@+id/controllerSerialNo_text"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="-"/>
                <TextView
                    android:id="@+id/warrantyStatus_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/controllerSerialNo"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:text="WARRANTY STATUS"/>
                <TextView
                    android:id="@+id/warrantyStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/controllerSerialNo"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/warrantyStatus_text"
                    android:text="- "/>
                <TextView
                    android:id="@+id/purchaseDate_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/warrantyStatus"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:text="PURCHASE/INSTALLATION DATE"/>
                <TextView
                    android:id="@+id/purchaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/warrantyStatus"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/purchaseDate_text"
                    android:text="- "/>
                <TextView
                    android:id="@+id/Agency_Govt_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purchaseDate"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:text="AGENCY/GOVT NAME"/>
                <TextView
                    android:id="@+id/Agency_Govt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purchaseDate"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/Agency_Govt_text"
                    android:text="- "/>

                <TextView
                    android:id="@+id/productCategory_text"
                    android:layout_below="@+id/Agency_Govt"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="PRODUCT CATEGORY"/>
                <TextView
                    android:id="@+id/productCategory"
                    android:layout_below="@+id/Agency_Govt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/productCategory_text"
                    android:text="- "/>
                <TextView
                    android:id="@+id/productType_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productCategory"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="PRODUCT TYPE"/>
                <TextView
                    android:id="@+id/productType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productCategory"
                    android:layout_toRightOf="@+id/productType_text"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="-"/>
                <TextView
                    android:id="@+id/capacity_text"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productType"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="CAPACITY"/>
                <TextView
                    android:id="@+id/capacityName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productType"
                    android:layout_toRightOf="@+id/capacity_text"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:padding="3dp"
                    android:gravity="center"
                    android:text="--"/>
                <TextView
                    android:id="@+id/capacityNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productType"
                    android:layout_toRightOf="@+id/capacityName"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:background="#ffffff"
                    android:padding="3dp"
                    android:gravity="center"
                    android:text="-"/>
                <TextView
                    android:id="@+id/complaintType_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/capacityName"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="COMPLAINT TYPE"/>
                <TextView
                    android:id="@+id/complaintType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/capacityName"
                    android:layout_toRightOf="@+id/complaintType_text"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="-"/>

                <TextView
                    android:id="@+id/nature_problem_text"
                    android:layout_width="160sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/complaintType"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="NATURE OF PROBLEM"/>
                <TextView
                    android:id="@+id/problem_nature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nature_problem_text"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="text"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/additional_details"
                android:layout_below="@+id/dark_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="19dp"
                android:layout_marginLeft="10dp"
                android:text="Contact Details"/>

            <TextView
                android:id="@+id/customerName_text"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/additional_details"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="CUSTOMER NAME"/>
            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/additional_details"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/customerName_text"
                android:textStyle="bold"
                android:text="- "/>
            <TextView
                android:id="@+id/city_text"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customerName"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="CITY"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customerName"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/city_text"
                android:textStyle="bold"
                android:text="- "/>

            <TextView
                android:id="@+id/district_text"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="DISTRICT"/>
            <TextView
                android:id="@+id/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/district_text"
                android:textStyle="bold"
                android:text="- "/>

            <TextView
                android:id="@+id/state_text"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/district"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="STATE"/>
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/district"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/state_text"
                android:textStyle="bold"
                android:text="- "/>

            <TextView
                android:id="@+id/fullAddress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_text"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="FULL ADDRESS   "/>
            <TextView
                android:id="@+id/fullAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fullAddress_text"
                android:textStyle="bold"
                android:text="--"/>
            <TextView
                android:id="@+id/contact_person_name_text"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullAddress"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="CONTACT PERSON"/>
            <TextView
                android:id="@+id/contact_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullAddress"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/contact_person_name_text"
                android:textStyle="bold"
                android:text="-"/>
            <TextView
                android:id="@+id/mobileNo_text"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_person_name"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="MOBILE NO"/>
            <TextView
                android:id="@+id/mobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_person_name"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mobileNo_text"
                android:textStyle="bold"
                android:text="- "/>
            <TextView
                android:id="@+id/alternate_mobileNo_text"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileNo"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="ALTERNATE MOBILE NO"/>
            <TextView
                android:id="@+id/alternate_mobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileNo"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mobileNo_text"
                android:textStyle="bold"
                android:text="- "/>
            <TextView
                android:id="@+id/emailId_text"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alternate_mobileNo"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:text="EMAIL ID"/>
            <TextView
                android:id="@+id/emailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alternate_mobileNo"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/emailId_text"
                android:textStyle="bold"
                android:text="- "/>

            <RelativeLayout
                android:id="@+id/image_layout"
                android:layout_below="@+id/emailId_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/snapshot1"
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#f7f7f7"
                    android:src="@drawable/ic_photo_camera_"/>
                <ImageView
                    android:id="@+id/snapshot2"
                    android:layout_below="@+id/snapshot1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#f7f7f7"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_photo_camera_"
                    />
            </RelativeLayout>
            <!--android:layout_below="@+id/image_layout"-->
            <LinearLayout
                android:id="@+id/button_grp_layout"
                android:layout_below="@+id/image_layout"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                    <Button
                        android:id="@+id/back_btn"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@drawable/button_box"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:text="Back"/>
                    <Button
                        android:id="@+id/action_btn"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_box_blue"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="Action"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</FrameLayout>