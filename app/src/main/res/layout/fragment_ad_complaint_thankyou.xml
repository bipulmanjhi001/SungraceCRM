<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1800b3f4"
    tools:context="sungracecrm.AdComplaintThankyouFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/thankyou_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Thank you for submitting your complaint request"/>
        <TextView
            android:id="@+id/complaint_no_text"
            android:layout_below="@+id/thankyou_text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Your Complaint No."/>
        <TextView
            android:id="@+id/complaint_no"
            android:layout_below="@+id/complaint_no_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="CRNXXXXXXXXX"/>

        <TextView
            android:id="@+id/addressed_text"
            android:layout_below="@+id/complaint_no"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Will be addressed shortly"/>
        <TextView
            android:id="@+id/footer_text"
            android:layout_below="@+id/addressed_text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Please make a note for CRN for future reference"/>
        <TextView
            android:id="@+id/footer_thanks_text"
            android:layout_below="@+id/footer_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Thank You"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="2">
        <Button
            android:id="@+id/add_new_complaint_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:background="@drawable/button_box"
            android:text="Add New Complaint"/>
        <Button
            android:id="@+id/add_back_to_dashboard_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/button_box_blue"
            android:textColor="#fff"
            android:text="Back To Dashboard"/>
    </LinearLayout>
</RelativeLayout>

</FrameLayout>