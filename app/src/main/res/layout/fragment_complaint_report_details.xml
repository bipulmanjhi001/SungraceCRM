<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context="sungracecrm.ComplaintReportDetailsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linlaHeaderProgress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">
                <ProgressBar
                    android:id="@+id/pbHeaderProgress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </ProgressBar>
            </LinearLayout>
                <RelativeLayout
                    android:id="@+id/lightLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#fff">
                    <TextView
                        android:id="@+id/reportId"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="ReportId "
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/crnNo"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#3f8a51"
                        android:textSize="17dp"
                        android:text="CRN : "/>

                    <TextView
                        android:id="@+id/complaintDate"
                        android:layout_toRightOf="@+id/crnNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#3f8a51"
                        android:textSize="17dp"
                        android:text="mm/dd/YYYY"/>
                    <TextView
                        android:id="@+id/fsrNo_text"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/complaintDate"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="FSR NO : "/>

                    <TextView
                        android:id="@+id/fsrNo"
                        android:layout_toRightOf="@+id/fsrNo_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/complaintDate"
                        android:layout_marginTop="8dp"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="FSR"/>

                    <TextView
                        android:id="@+id/CrnCustomerName_text"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fsrNo"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="CUSTOMER NAME : "/>

                    <TextView
                        android:id="@+id/CrnCustomerName"
                        android:layout_toRightOf="@+id/CrnCustomerName_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fsrNo"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="CustomerName"/>
                    <TextView
                        android:id="@+id/TechnicianName_text"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CrnCustomerName"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="ENGINEER NAME : "/>

                    <TextView
                        android:id="@+id/tTechnicianName"
                        android:layout_toRightOf="@+id/TechnicianName_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/CrnCustomerName"
                        android:textStyle="bold"
                        android:text="Technician Name"/>
                    <TextView
                        android:id="@+id/reportGenerateDate_text"
                        android:layout_width="180dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tTechnicianName"
                        android:textStyle="bold"
                        android:text="REPORT GENERATE DATE : "/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_toRightOf="@+id/reportGenerateDate_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tTechnicianName"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="reportGenerateDate"/>
                </RelativeLayout>
           <RelativeLayout
               android:id="@+id/darkLayout"
               android:layout_below="@+id/lightLayout"
               android:padding="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/job_login_location_text"
                   android:textStyle="bold"
                   android:text="JOB LOGIN LOCATION :"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:visibility="gone"/>
               <TextView
                   android:id="@+id/job_login_location"
                   android:layout_below="@+id/job_login_location_text"
                   android:textSize="15dp"
                   android:text="hello"
                   android:textColor="#3f8a51"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:visibility="gone"/>

               <TextView
                   android:id="@+id/engineer_observation_text"
                   android:layout_below="@+id/job_login_location"
                   android:textStyle="bold"
                   android:text="DIAGNOSIS / OBSERVATION :"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="15dp"/>
               <TextView
                   android:id="@+id/engineer_observation"
                   android:layout_below="@+id/engineer_observation_text"
                   android:textSize="15dp"
                   android:text=""
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/corrective_action_text"
                   android:layout_below="@+id/engineer_observation"
                   android:textStyle="bold"
                   android:text="CORRECTIVE ACTION :"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"/>
               <TextView
                   android:id="@+id/corrective_action"
                   android:layout_below="@+id/corrective_action_text"
                   android:textSize="15dp"
                   android:text=""
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/technical_suggestion_text"
                   android:layout_below="@+id/corrective_action"
                   android:textStyle="bold"
                   android:text="TECHNICAL SUGGESTION :"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"/>
               <TextView
                   android:id="@+id/technical_suggestion"
                   android:layout_below="@+id/technical_suggestion_text"
                   android:textSize="15dp"
                   android:text=""
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/spares_required_text"
                   android:layout_below="@+id/technical_suggestion"
                   android:textStyle="bold"
                   android:text="SPARES REQUIRED :"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:visibility="gone"
                   android:layout_marginTop="10dp"/>
               <TextView
                   android:id="@+id/spares_required"
                   android:layout_below="@+id/spares_required_text"
                   android:textSize="15dp"
                   android:text=""
                   android:layout_width="match_parent"
                   android:visibility="gone"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/spares_replaced_text"
                   android:layout_below="@+id/spares_required"
                   android:textStyle="bold"
                   android:text="SPARES REPLACED :"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"/>
               <TextView
                   android:id="@+id/spares_replaced"
                   android:layout_below="@+id/spares_replaced_text"
                   android:textSize="15dp"
                   android:text=""
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/customer_name_site_text"
                   android:layout_below="@+id/spares_replaced"
                   android:textStyle="bold"
                   android:text="CUSTOMER NAME PRESENT AT SITE :"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"/>
               <TextView
                   android:id="@+id/customer_name_site"
                   android:layout_below="@+id/customer_name_site_text"
                   android:textSize="15dp"
                   android:textColor="#3f8a51"
                   android:text=""
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/customer_mobileNo_present_at_site_text"
                   android:layout_below="@+id/customer_name_site"
                   android:textStyle="bold"
                   android:text="CUSTOMER MOBILE NO PRESENT AT SITE :"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"/>
               <TextView
                   android:id="@+id/customer_mobileNo_present_at_site"
                   android:layout_below="@+id/customer_mobileNo_present_at_site_text"
                   android:textSize="15dp"
                   android:textColor="#3f8a51"
                   android:text=""
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <LinearLayout
                   android:id="@+id/signature_layout"
                   android:layout_below="@+id/customer_mobileNo_present_at_site"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="6"
                       android:background="#fff"
                       android:orientation="vertical">

                       <TextView
                           android:id="@+id/customer_signature_text"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:text="CUSTOMER SIGNATURE"/>
                       <ImageView
                           android:id="@+id/customer_signature"
                           android:layout_width="match_parent"
                           android:layout_height="140dp"
                           android:src="@drawable/ic_photo_camera_"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="6"
                       android:background="#fff"
                       android:layout_marginRight="5dp"
                       android:orientation="vertical">

                       <TextView
                           android:textStyle="bold"
                           android:id="@+id/engineer_signature_text"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="ENGINEER SIGNATURE"/>
                       <ImageView
                           android:id="@+id/engineer_signature"
                           android:layout_width="match_parent"
                           android:layout_height="140dp"
                           android:src="@drawable/ic_photo_camera_"/>
                   </LinearLayout>

               </LinearLayout>
               <TextView
                   android:id="@+id/snapshot1_text"
                   android:layout_below="@+id/signature_layout"
                   android:textStyle="bold"
                   android:text="UNIT 1 "
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"/>
               <ImageView
                   android:id="@+id/snapshot1"
                   android:layout_below="@+id/snapshot1_text"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:visibility="gone"
                   android:src="@drawable/ic_photo_camera_"/>
               <TextView
                   android:id="@+id/snapshot2_text"
                   android:layout_below="@+id/snapshot1"
                   android:textStyle="bold"
                   android:text="UNIT 2 "
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"/>
               <ImageView
                   android:id="@+id/snapshot2"
                   android:layout_below="@+id/snapshot2_text"
                   android:layout_width="match_parent"
                   android:src="@drawable/ic_photo_camera_"
                   android:visibility="gone"
                   android:layout_height="200dp" />
               <TextView
                   android:id="@+id/snapshot3_text"
                   android:layout_below="@+id/snapshot2"
                   android:textStyle="bold"
                   android:text="CUSTOMER PHOTO "
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"/>
               <ImageView
                   android:id="@+id/snapshot3"
                   android:layout_below="@+id/snapshot3_text"
                   android:layout_width="match_parent"
                   android:src="@drawable/ic_photo_camera_"
                   android:visibility="gone"
                   android:layout_height="200dp" />
           </RelativeLayout>



        </RelativeLayout>
            <LinearLayout
                android:id="@+id/button_grp_layout"
                android:layout_below="@+id/first_layout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                    <Button
                        android:layout_weight="4"
                        android:id="@+id/back_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_box"
                        android:textColor="#fff"
                        android:text="Back"/>
                    <Button
                        android:layout_weight="4"
                        android:id="@+id/spares_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_box_blue"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:text="Spares Requested"/>
                    <Button
                        android:layout_weight="4"
                        android:id="@+id/home_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/button_box_green"
                        android:textColor="#fff"
                        android:text="Home"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>


</FrameLayout>