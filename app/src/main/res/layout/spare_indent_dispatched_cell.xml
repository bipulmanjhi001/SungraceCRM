<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#1800b3f4"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_below="@+id/first_layout"
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
            <TextView
                android:visibility="gone"
                android:id="@+id/idspare"
                android:layout_width="180sp"
                android:layout_height="40dp"
                android:text=""/>

            <LinearLayout
                android:id="@+id/heading_Layout"
                android:layout_below="@+id/idspare"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/spare_name"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Spare Name"/>
                <TextView
                    android:id="@+id/qty"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Qty"/>

                <TextView
                    android:id="@+id/crn"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#006fff"
                    android:text="CRN"/>

            </LinearLayout>


            <TextView
                android:id="@+id/remark"
                android:layout_below="@+id/heading_Layout"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"/>
            <Button
                android:id="@+id/statusR"
                android:layout_below="@+id/remark"
                android:layout_marginTop="8dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button_box_blue"
                android:drawableLeft="@drawable/ic_touch"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="Received"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
